                  Command="self:App.ChangeToCmd"
                  CommandParameter="{x:Type hab:DoubleNeuron}"
                  CommandTarget="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget}" />
        <Separator />
